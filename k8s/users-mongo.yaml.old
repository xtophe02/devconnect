apiVersion: apps/v1
kind: Deployment
metadata:
  name: users-mongo-dep
spec:
  replicas: 1
  selector:
    matchLabels:
      app: users-mongo
  template:
    metadata:
      labels:
        app: users-mongo
    spec:
      volumes:
        - name: users-mongo-storage
          persistentVolumeClaim:
            claimName: db-users-pvc
      containers:
        - name: users-mongo
          # imagePullPolicy: Never
          # image: us.gcr.io/ticketing-dev/auth-mongo
          image: mongo
          # ports:
          #   - containerPort: 4005
          volumeMounts:
            - name: users-mongo-storage
              mountPath: /data/db
---
apiVersion: v1
kind: Service
metadata:
  name: users-mongo-srv
spec:
  # type: NodePort
  selector:
    app: users-mongo
  ports:
    - port: 27017
      targetPort: 27017
      protocol: TCP
      name: db-users
      # nodePort: 31515
